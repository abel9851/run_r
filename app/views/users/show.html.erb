<div>
    <% if flash[:notice_five_de] %>
    <p class="flash-message"><%= flash[:notice_five_de] %></p>
    <% elsif flash[:notice_ten_de] %>
    <p class="flash-message"><%= flash[:notice_ten_de] %></p>
    <% elsif flash[:notice_half_de] %>
    <p class="flash-message"><%= flash[:notice_half_de] %></p>
    <% elsif flash[:notice_full_de] %>
    <p class="flash-message"><%= flash[:notice_full_de] %></p>
    <% end %>
</div>

<div class="title-box">
    <div class="page-title"><%= "nickname：#{@nickname}" %></div>
</div>

<div class="content">
    <br>
    <div class="bg-content-item p-2 rounded border border-warning">
        <div class="d-flex  align-items-center justify-content-between">
            5km &nbsp; Record
              <div>
                <% if FiveKmRecord.where(user_id: params[:id]).present? %>
                    　　　<%= "#{@five_km_record.minute[:name]}分" %>
                    <%= "#{@five_km_record.second[:name]}秒" %>
                <% end %>  
              </div>
              <div></div><div></div><div></div>
        </div>     
        
        <div class="d-flex  align-items-center justify-content-between">
            10km Record
             <div>
                <% if TenKmRecord.where(user_id: params[:id]).present? %>
                    　　　<%= "#{@ten_km_record.minute[:name]}分" %>
                    <%= "#{@ten_km_record.second[:name]}秒" %>
                <% end %>
             </div>
             <div></div><div></div><div></div>
        </div>

        <div class="d-flex  align-items-center justify-content-between">
            Half　Record
              <div>
                <% if HalfRecord.where(user_id: params[:id]).present? %>
                    <%= "#{@half_record.hour[:name]}時間" %>
                    <%= "#{@half_record.minute[:name]}分" %>
                    <%= "#{@half_record.second[:name]}秒" %>
                <% end %>
              </div>
              <div></div><div></div><div></div>
        </div>

        <div class="d-flex  align-items-center justify-content-between">
            Full　 Record
              <div>
                <% if FullRecord.where(user_id: params[:id]).present? %>
                    <%= "#{@full_record.hour[:name]}時間" %>
                    <%= "#{@full_record.minute[:name]}分" %>
                    <%= "#{@full_record.second[:name]}秒" %>
                <% end %>
            </div>
            <div></div><div></div><div></div>
        </div>

    </div>

    <br><br>

    <div class="responsive-d-flex">
        <div class="m-2">
            <%= link_to user_vdots_path(@user) do %>
                <button type="button" class="btn btn-success text-white nav-link"><%= @nickname %>さんのVDOT</button>
            <% end %>
        </div>
        <% if user_signed_in? && @user.id == current_user.id %>

            <div class="m-2">
                <%= link_to new_record_path do %>
                    <button type="button" class="btn btn-success text-white nav-link">ベストタイム登録</button>
                <% end %>
            </div>
            
            <div class="m-2">
                <%= link_to edit_record_path do %>
                    <button type="button" class="btn btn-success text-white nav-link">ベストタイム編集</button>
                <% end %>
            </div>

            <div class="m-2">
                <%= link_to edit_record_path do %>
                    <button type="button" class="btn btn-success text-white nav-link">ベストタイム削除</button>
                <% end %>
            </div>

        <% end %>
    </div>  
</div>
      
<br><br>

<div class="title-box">
    <div class="page-title"><%= @nickname %>さんの投稿一覧</div>
</div>
<br>

<div class="content">
    <% @tweets.each do |tweet| %>
        <div class="bg-content-item p-2 rounded">
            <%= link_to "#{tweet.content}", tweet_path(tweet.id), class: "link" %>
        </div>
        <br>
    <% end %>
</div>
