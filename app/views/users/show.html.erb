<div class="p-5">
    <div class="title-box">
        <div class="page-title"><%= "nickname：#{@nickname}" %></div>
    </div>

    <div class="content p-5">
        <br>
        <div class="bg-white p-2 rounded border border-warning">
            <div class="">
                5km Record：
                <% if FiveKmRecord.where(user_id: params[:id]).present? %>
                    <%= "#{@five_km_record.hour[:name]}時間" %>
                    <%= "#{@five_km_record.minute[:name]}分" %>
                    <%= "#{@five_km_record.second[:name]}秒" %>
                <% end %>  
            </div>     
            
            <div class="">
                10km Record：
                <% if TenKmRecord.where(user_id: params[:id]).present? %>
                    <%= "#{@ten_km_record.hour[:name]}時間" %>
                    <%= "#{@ten_km_record.minute[:name]}分" %>
                    <%= "#{@ten_km_record.second[:name]}秒" %>
                <% end %>
            </div>
            <div class="">
                Half Record：
                <% if HalfRecord.where(user_id: params[:id]).present? %>
                    <%= "#{@half_record.hour[:name]}時間" %>
                    <%= "#{@half_record.minute[:name]}分" %>
                    <%= "#{@half_record.second[:name]}秒" %>
                <% end %>
            </div>
            <div class="">
                Full Record：
                <% if FullRecord.where(user_id: params[:id]).present? %>
                    <%= "#{@full_record.hour[:name]}時間" %>
                    <%= "#{@full_record.minute[:name]}分" %>
                    <%= "#{@full_record.second[:name]}秒" %>
                <% end %>
            </div>    
        </div>
        <br><br>

        <div class="d-flex">
            <div class="m-2">
                <%= link_to user_vdots_path(@user) do %>
                    <button type="button" class="btn btn-success text-white nav-link"><%= "#{@nickname}さんのVDOT" %></button>
                <% end %>
            </div>
            <% if user_signed_in? && @user.id == current_user.id %>
                <div class="m-2">
                    <%= link_to new_record_path do %>
                        <button type="button" class="btn btn-success text-white nav-link"><%= "自己ベスト登録" %></button>
                    <% end %>
                </div>    
                <div class="m-2">
                    <%= link_to edit_record_path do %>
                        <button type="button" class="btn btn-success text-white nav-link"><%= "自己ベスト編集"%></button>
                    <% end %>
                </div>    
            <% end %>
        </div>  
    </div>
      
</div>




<br><br>

<div class="p-5">
    <div class="title-box">
        <div class="page-title"><%= @nickname %>さんの投稿一覧</div>
    </div>
    <br>

    <div class="content p-5">
        <% @tweets.each do |tweet| %>
            <div class="bg-light p-2 rounded">
                <%= link_to "#{tweet.content}", tweet_path(tweet.id) %>
            </div>
            <br>
        <% end %>
    </div>    
</div>    