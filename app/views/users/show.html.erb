 <%= form_with url: user_registration_path(@user), method: :put, local: true do |f| %>


      <%= f.label :プロフィール画像 %><br/>
      　　　　　　　　　　　　　　<%= f.file_field :image %>
   

      <%= f.submit "更新", class: "btn btn-success text-white btn-lg  mt-2" %>
    <% end %> 

<div class="title-box">
    <div class="page-title"><%= "nickname：#{@nickname}" %></div>
</div>

<div class="m-2 mb-5">
    <%= link_to edit_user_registration_path(@user) do %>
        <button type="button" class="btn btn-success text-white nav-link">ユーザー情報編集</button>
    <% end %>
</div>

<div class="show-image">
    <% if @user.image.present? %>
       <img src=<%= @user.image %> class = "icon_image">
    <% else %>
        <img src="/images/staff1.jpg" class = "icon_image">
    <% end %>    
</div>


<br><br>


<div>
    <br>
    <p class="user-record-text">
        <%= "#{@nickname} さんのベストタイム" %>
    <p>

    <div class="content-item p-2 rounded border border-warning">
        <div class="d-flex  align-items-center justify-content-between">
            5km &nbsp; Record
              <div>
                <% if FiveKmRecord.where(user_id: params[:id]).present? %>
                    　　　<%= "#{@five_km_record.minute[:name]}分" %>
                    <%= "#{@five_km_record.second[:name]}秒" %>
                <% end %>  
              </div>
              <div></div><div></div><div></div>
        </div>     
        
        <div class="d-flex  align-items-center justify-content-between">
            10km Record
             <div>
                <% if TenKmRecord.where(user_id: params[:id]).present? %>
                    　　　<%= "#{@ten_km_record.minute[:name]}分" %>
                    <%= "#{@ten_km_record.second[:name]}秒" %>
                <% end %>
             </div>
             <div></div><div></div><div></div>
        </div>

        <div class="d-flex  align-items-center justify-content-between">
            Half　Record
              <div>
                <% if HalfRecord.where(user_id: params[:id]).present? %>
                    <%= "#{@half_record.hour[:name]}時間" %>
                    <%= "#{@half_record.minute[:name]}分" %>
                    <%= "#{@half_record.second[:name]}秒" %>
                <% end %>
              </div>
              <div></div><div></div><div></div>
        </div>

        <div class="d-flex  align-items-center justify-content-between">
            Full　 Record
              <div>
                <% if FullRecord.where(user_id: params[:id]).present? %>
                    <%= "#{@full_record.hour[:name]}時間" %>
                    <%= "#{@full_record.minute[:name]}分" %>
                    <%= "#{@full_record.second[:name]}秒" %>
                <% end %>
            </div>
            <div></div><div></div><div></div>
        </div>

    </div>

    <br><br>

    <div class="responsive-d-flex">
        <div class="m-2 mb-4">
            <%= link_to user_vdots_path(@user) do %>
                <button type="button" class="btn btn-success text-white nav-link">VDOT</button>
            <% end %>
        </div>
        <% if user_signed_in? && @user.id == current_user.id %>

            <div class="m-2 mb-4">
                <%= link_to new_record_path do %>
                    <button type="button" class="btn btn-success text-white nav-link">登録</button>
                <% end %>
            </div>
            
            <div class="m-2 mb-4">
                <%= link_to edit_record_path do %>
                    <button type="button" class="btn btn-success text-white nav-link">編集</button>
                <% end %>
            </div>

            <div class="m-2 mb-4">
                <%= link_to edit_record_path do %>
                    <button type="button" class="btn btn-success text-white nav-link">削除</button>
                <% end %>
            </div>

        <% end %>
    </div>  
</div>
      
<br><br>

<div class="title-box">
    <div class="page-title"><%= @nickname %>さんの投稿一覧</div>
</div>
<br>

<div>
    <% @tweets.each do |tweet| %>
        <div class="bg-content-item p-2 mt-3 rounded">
            <%= link_to "#{tweet.content}", tweet_path(tweet.id), class: "link" %>
        </div>
        <br>
    <% end %>
</div>
