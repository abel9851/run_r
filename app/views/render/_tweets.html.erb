<div class="row justify-content-around f-f-monospace">
  <% @tweets.each do |tweet| %>

    <div class="tweet-index-content-size col-md-6 col-lg-4">
      <div class="bg-tweet-index-content">
        <div class="d-flex">

          <%= link_to user_path(tweet.user_id), class: "link" do %>
            <div class="tweet-index-content">
              <div>
                <div class="tweet-index-image"> 
                    <% if tweet.user.image.present? %>
                      <img src=<%= tweet.user.image %> class = "tweet-index-image-icon">
                    <% else %>
                      <img src="/images/dog2.png" class = "tweet-index-image-icon">
                    <% end %>
                </div>

                <div>
                    <% if user_signed_in? != true || current_user.id != tweet.user_id %>
                      <div class="tweet-index-nickname"><strong><%= "#{tweet.user.nickname}" %></strong></div>
                    <% else %>
                      <div class="tweet-index-nickname"><strong>あなた</strong></div>
                    <% end %>
                </div>
              </div>

              <div class="tweet-index-address">
                <%= "#{tweet.address}" %>
              </div>  
            </div>
          <% end %>
          
          <div class="">
            <%= link_to tweet_path(tweet.id) do %>
              <img src=<%= tweet.place_image %> class = "place-image link rounded">
            <% end %>  
          </div>
         
        </div>  

        <div class="d-flex justify-content-center mb-2">
          <div class="tweet-index-place rounded">
            <%= "#{tweet.place_name}" %>
          </div>  
        </div> 
    
        <div class="tweet-index-text bg-content-item rounded">
          <%= "#{tweet.content}" %>
        </div>  
      </div>   
    </div>
    
  <% end %>
</div>  