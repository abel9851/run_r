<script>
    // 投稿にカーソルを重ねると説明文表示
    $(function(){
      $(".mini-slide-content").hide();
      $(".mini-slide").hover(
        function() {
            let ind= $('.mini-slide').index(this);
            $('.mini-slide-content').eq(ind).show(500);
        },
        function(){
            let ind = $('.mini-slide').index(this);
            $('.mini-slide-content').eq(ind).hide();
        }
      );
    })
</script>