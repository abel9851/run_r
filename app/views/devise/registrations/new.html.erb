<div class="forms-container f-f-monospace">
  <br><br>

  <div class="titles">
    新規登録
  </div>

  <div class="d-flex justify-content-center">
    <div class="forms-content">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class= "error">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="field form-label mb-3">
          <%= f.label :nickname, class: "form-list mb-2" %><br><span class="form-list-info ml-2">（10文字以内）</span><br>
          <%= f.text_field :nickname, autofocus: true, maxlength: "10", class: "w-100 p-2 mb-4 rounded form"%>
        </div>

        <div class="field form-label mb-3">
          <%= f.label :email, class: "form-list mb-2" %><br><span class="form-list-info ml-2">（＠必須）</span><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 p-2 mb-4 rounded form" %>
        </div>

        <div class="field form-label mb-3">
          <%= f.label :password, class: "form-list mb-2" %><br><span class="form-list-info ml-2">（6文字以上の半角英数字）</span><br>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-100 p-2 mb-4 rounded form" %>
        </div>

        <div class="field form-label mb-5">
          <%= f.label :password（確認）, class: "form-list mb-2" %><br><span class="form-list-info ml-2">（6文字以上の半角英数字）</span><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100 p-2 mb-4 rounded form" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録する", class: "btn btn-success p-2 pl-5 pr-5" %>
        </div>
      <% end %>

      <div class="d-flex justify-content-center">
        <div class="mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>

    </div>
  </div>

</div>