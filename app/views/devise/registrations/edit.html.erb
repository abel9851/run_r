<div class="forms-container f-f-monospace">
  <br><br>

  <div class="titles">
    <%= "#{@user.nickname} さんの編集ページ" %>
  </div>

  <div class="edit-image">
    <% if @user.image.present? %>
      <img src=<%= @user.image %> class = "icon_image">
    <% else %>
      <img src="/images/dog2.png" class = "icon_image">
    <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <div class="forms-content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } )do |f| %>
        <div class= "error">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="field form-label mb-4">
          <%= f.label :プロフィール画像, class: "form-list mb-2" %><br/>
          　　　　<%= f.file_field :image, id: "preview" %>
        </div>

        <div id="image-list"></div>

        <div class="field form-label mb-4 mt-5">
          <%= f.label :自己紹介文, class: "form-list mb-2" %><br>( 最大文字数 50 )<br/>
          <%= f.text_area :introduction, autofocus: true, maxlength: "50", class: "signup-form w-75 p-2 mb-4 rounded form" %>
        </div>

        <div class="field form-label mb-4">
          <%= f.label :nickname, class: "form-list mb-2" %><br>( 最大文字数 10 )<br/>
          <%= f.text_field :nickname, autofocus: true, maxlength: "10", class: "signup-form w-75 p-2 mb-4 rounded form" %>
        </div>

        <div class="field form-label mb-3">
          <%= f.label :email, class: "form-list mb-2" %><br>( @ が必須です )<br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup-form w-75 p-2 mb-4 rounded form" %>
        </div>

        <div class="actions">
          <%= f.submit "マイページを編集", class: "btn btn-success text-white mt-2 p-2 pl-3 pr-3" %>
        </div>
      <% end %>

      <div class="d-flex justify-content-center">
        <div class="mt-3">
          <%= link_to "戻る", :back, class: "user-edit-back-btn btn btn-dark border-none mt-2 p-1 pr-4 pl-4" %>
        </div>
      </div>

    </div>
  </div>

</div>



