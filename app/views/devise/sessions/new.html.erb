<div class="forms-container">

  <div class="titles mb-5">ログイン</div>

  <div class= "text-danger">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
    <% end %>
  </div>

  <%# かんたんログインボタン %>
  <div class="mb-5">
    <div class="form-list mb-4">
      入力なしでログインできます
    </div>
    <%= render "gest_login" %>
  </div>

  <div class="d-flex justify-content-center">
    <div class="forms-content">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-label mb-4">
            <%= f.label :email, class: "form-list mb-3" %><br><span class="form-list-info ml-2">（＠必須）</span><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 p-2 mb-4 rounded form" %>
          </div>

          <div class="field form-label">
            <%= f.label :password, class: "form-list mb-3"  %><br><span class="form-list-info ml-2">（6文字以上の半角英数字 必須）</span><br>
            <%= f.password_field :password, autocomplete: "current-password", class: "w-100 p-2 mb-5 rounded form" %>
          </div>

          <div class="actions mt-3">
            <%= f.submit "ログイン", class: "btn btn-success p-2 pl-5 pr-5" %>
          </div>
      <% end %>

      <%# かんたんログインボタン %>
      <div class="mt-4">
        <%= render "gest_login" %>
      </div>

      <div class="d-flex justify-content-center">
        <div class="mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>

    </div>
  </div>

</div>