<script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
<script>
  $(function(){
    // 走力レベル一覧
    $(".five-record-logo").hide();
    $(".ten-record-logo").hide();
    $(".half-record-logo").hide();
    $(".full-record-logo").hide();

    $(".five-record-logo").eq(<%= @five_vdot-1 %>).show().css("border-bottom", "2px solid rgb(52, 192, 33)");
    $(".ten-record-logo").eq(<%= @ten_vdot-1 %>).show().css("border-bottom", "2px solid rgb(52, 192, 33)");
    $(".half-record-logo").eq(<%= @half_vdot-1 %>).show().css("border-bottom", "2px solid rgb(52, 192, 33)");
    $(".full-record-logo").eq(<%= @full_vdot-1 %>).show().css("border-bottom", "2px solid rgb(52, 192, 33)");

    $(".vdot-record-item").eq(<%= @five_vdot-1 %>).css({"border": "5px solid rgb(52, 192, 33)", "padding-bottom": "17px"});
    $(".vdot-record-item").eq(<%= @ten_vdot-1 %>).css({"border": "5px solid rgb(52, 192, 33)", "padding-bottom": "17px"});
    $(".vdot-record-item").eq(<%= @half_vdot-1 %>).css({"border": "5px solid rgb(52, 192, 33)", "padding-bottom": "17px"});
    $(".vdot-record-item").eq(<%= @full_vdot-1 %>).css({"border": "5px solid rgb(52, 192, 33)", "padding-bottom": "17px"});

    $(".vdot-five-bg").eq(<%= @five_vdot-1 %>).css("border-bottom", "2px solid rgb(52, 192, 33)");
    $(".vdot-ten-bg").eq(<%= @ten_vdot-1 %>).css("border-bottom", "2px solid rgb(52, 192, 33)");
    $(".vdot-half-bg").eq(<%= @half_vdot-1 %>).css("border-bottom", "2px solid rgb(52, 192, 33)");
    $(".vdot-full-bg").eq(<%= @full_vdot-1 %>).css("border-bottom", "2px solid rgb(52, 192, 33)");


    // 目安ぺース一覧
    $(".five-pace-logo").hide();
    $(".ten-pace-logo").hide();
    $(".half-pace-logo").hide();
    $(".full-pace-logo").hide();

    $(".vdot-pace-item").eq(<%= @five_vdot-1 %>).css({"border": "5px solid rgb(52, 192, 33)", "padding-bottom": "0"});
    $(".vdot-pace-item").eq(<%= @ten_vdot-1 %>).css({"border": "5px solid rgb(52, 192, 33)", "padding-bottom": "0"});
    $(".vdot-pace-item").eq(<%= @half_vdot-1 %>).css({"border": "5px solid rgb(52, 192, 33)", "padding-bottom": "0"});
    $(".vdot-pace-item").eq(<%= @full_vdot-1 %>).css({"border": "5px solid rgb(52, 192, 33)", "padding-bottom": "0"});
  });

  // ペース説明のドロップダウン
  new Vue({
    el: '#root',
    data: {
        isShow:false
    }
  })
</script>