<div class="tweet-show-container">

  <div class="">
    <div class="d-flex justify-content-center">
      <div class="">
        <img src="/images/place1.png" class = "tweet-show-image">
      </div>
    </div>

    <div class="tweet-show-place-name">
      <div class="">
        大宮第三公園
      </div>  
    </div>
  </div>  

  <div class="back-ground">

    <div class="d-flex justify-content-around">
      <div class="tweet-show-profile"> 
        <div class="tweet-show-profile-bg"> 
          <% if @tweet.user.image.present? %>
            <img src=<%= @tweet.user.image %> class = "tweet-show-image-icon">
          <% else %>
              <img src="/images/dog2.png" class = "tweet-show-image-icon">
          <% end %>   
        
          <div class="mt-3">
            投稿者：
            <%= link_to "#{@tweet.user.nickname}", user_path(@tweet.user_id), class: "link" %>
          </div>

          <div class="tweet-show-btn">
            <% if user_signed_in? && current_user.id == @tweet.user_id %>
              <div class="m-2"> 
                <%= link_to edit_tweet_path(@tweet.id) do %>
                  <button type="button" class="btn btn-success text-white btn-lg">編集する</button>
                <% end %>
              </div>    
            
              <div class="m-2">
                <%= link_to tweet_path(@tweet.id), method: :delete do %>
                  <button type="button" class="btn btn-success text-white btn-lg">削除する</button>
                <% end %>
              </div>    
            <% end %>  
          </div>      
        </div>
      </div>

      <div>
        <div class="tweet-show-place-texts">
          <%= @tweet.content %>
        </div>

        <div class="tweet-show-place-texts">
            <strong>住所</strong>：埼玉県さいたま市見沼区
        </div>
        <div class="map">
           MAP
        </div>
      </div>  

    </div>  

    <div class="m-4">
      <div class="title-box pb-0">
        <div class="page-title pb-2">コメント一覧</div>
      </div> 

      <br>

      <% if user_signed_in? %>
        <%= form_with url: tweet_messages_path(@tweet.id) do |f| %>
        <div class="d-flex align-items-center">
          <div class="w-50">
            <%= f.text_area :text, placeholder: "コメントを入力", class: "p-2 w-100 rounded" %>
          </div>  
          <div class="record-item">
            <%= f.submit "コメント", class: "btn btn-success text-white p-3 ml-5" %>
          </div>
        </div>  
        <% end %>
      <% end %>
    </div>

    <div class="p-5">
      <div id='messages'>
        <% @messages.reverse_each do |message| %>
          <% if @tweet.id == message.tweet_id%>
            <div class="bg-content-item message">
              <%= message.text %><br>
              <% if user_signed_in? != true || current_user.id != message.user_id %>
                <div class="text-right">
                  <%= link_to "#{message.user.nickname}さん", user_path(message.user_id), class: "link" %>
                  のコメントです
                </div>  
              <% else %>
                <div class="text-right">
                  <%= link_to "あなた", user_path(message.user_id), class: "link" %>
                  のコメントです
                </div>  
              <% end %> 
            </div>
          <% end %>  
        <% end %>
      </div>
    </div>  


  </div>
</div>  