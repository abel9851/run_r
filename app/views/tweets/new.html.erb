<div class="forms-container">

  <div class="titles mt-5">新規投稿ページ</div>

  <br><br><br>

  <div class="d-flex justify-content-center mb-5">
    <div class="forms-content p-5">

      <%= form_with(model: @tweet, local: true) do |f| %>

        <%= render 'render/error_messages', model: f.object %>

        <%= f.text_field :tag_ids, class: "form-control", id:'tag_ids', placeholder: "タグをつける。複数つけるには','で区切ってください。" %>


        <div class="m-3">
          <%= f.label :場所の名前（１６字以内） %><br>
          <%= f.text_field :place_name, placeholder: "例）〇〇公園", class: "w-100 p-1 mb-5 rounded" %>
        </div>

        <div class="m-3">
          <%= f.label :場所の画像  %><br>
          <%= f.file_field :place_image, id: "preview", class: "w-100 p-1 mb-5 rounded" %>
        </div>

        <div id="image-list"></div>

        <div class="m-3">
          <%= f.label :住所（３０字以内） %><br>
          <%= f.text_field :address, placeholder: "例）〇〇県〇〇市〇〇区〇〇町１ー１", class: "w-100 p-1 mb-5 rounded" %>
        </div>

        <div class="m-3">
          <%= f.label :どんな人におすすめ？ %><br>
          <label><%= f.radio_button :level, 1 %>誰でも　</label>
          <label><%= f.radio_button :level, 2 %>経験者　</label>
          <label><%= f.radio_button :level, 3 %>競技思考</label>
        </div>

        <div class="m-3 mt-5">
          <%= f.label :何かひとこと（１００字以内） %><br>
          <%= f.text_area :content, placeholder: "例）緑が多くて素敵な公園です", rows: "6", class: "w-100 p-1 mb-5 rounded" %>
        </div>

        <div>
            <%= f.submit "投稿", class: "btn btn-success text-white btn-lg" %>
        </div>
      <% end %>

    </div>
  </div>

</div>