<div class="title-box">
  <div class="page-title">新規投稿ページ</div>
</div>

<br><br><br>

<div class="">
  <%= form_with(model: @tweet, local: true) do |f| %>
    <div class="m-3"> 
      <%= f.label :place_name %><br>( 場所の名前 )<br/>
      <%= f.text_field :place_name, placeholder: "例）〇〇公園", class: "w-75 p-2 rounded" %>
    </div> 

    <div class="m-3"> 
      <%= f.label :place_image %><br>( 場所の画像 )<br/>
      <%= f.file_field :place_image, placeholder: "画像の url", class: "w-75 p-2 rounded" %>
    </div> 

    <div class="m-3"> 
    <%= f.label :prefecture %><br>( 場所の存在する 県 )<br/>
      <%= f.text_field :prefecture, placeholder: "例）〇〇県", class: "w-75 p-2 rounded" %>
    </div> 

    <div class="m-3"> 
      <%= f.label :city %><br>( 場所の存在する 市 )<br/>
      <%= f.text_field :city, placeholder: "例）〇〇市", class: "w-75 p-2 rounded" %>
    </div> 

    <div class="m-3"> 
      <%= f.label :address %><br>( 住所の続き )<br/>
      <%= f.text_field :address, placeholder: "例）〇〇区〇〇町１ー１", class: "w-75 p-2 rounded" %>
    </div> 

    <div class="m-3"> 
      <%= f.label :content %><br>( 何かひとこと )<br/>
      <%= f.text_area :content, placeholder: "例）緑が多くて素敵な公園です", rows: "6", class: "w-75 p-2 rounded" %>
    </div> 

    <div class="">
        <%= f.submit "投稿", class: "btn btn-success text-white btn-lg" %>
    </div> 
  <% end %>
</div>
