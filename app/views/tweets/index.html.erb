<div class="tweet-index-content rounded">

  <% if user_signed_in? %>
    <%= link_to new_tweet_path  do %>
      <p>
        <button type="button" class="btn btn-success btn-lg">投稿する</button>
      </p>
    <% end %>
    <br>
  <% end %>


  <% @tweets.each do |tweet| %>
    <div class="d-flex align-items-center justify-content-center mr-5">
       <div class="tweet-index-image"> 
          <% if tweet.user.image.present? %>
            <img src=<%= tweet.user.image %> class = "tweet-index-image-icon">
          <% else %>
            <img src="/images/dog2.png" class = "tweet-index-image-icon">
          <% end %>
       </div>

      <div class="tweet-index-contents bg-content-item rounded">
        <div class="h5 link">
          <%= link_to "#{tweet.content}", tweet_path(tweet.id), class: "link" %><br>
        </div>  
        <br>
        <div class="text-right">
          投稿者：
          <% if user_signed_in? != true || current_user.id != tweet.user_id %>
            <%= link_to "#{tweet.user.nickname}", user_path(tweet.user_id), class: "link" %>
          <% else %>
            <%= link_to "あなた", user_path(tweet.user_id), class: "link" %>
          <% end %>
        </div>
      </div> 
    </div>
    
  <% end %>
</div> 



