  }

  .VueCarousel-slide {
    font-size:12px;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 200px;
    width: 300px;
    background:#ccc;
    border-right:1px solid #FFF;
    box-sizing:border-box;
  }


</style>





