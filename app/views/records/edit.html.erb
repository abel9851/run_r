<h4>自己ベスト編集ページ</h4>
<br><br>

<% if FiveKmRecord.where(user_id:current_user.id).present? %>
  <%= form_with url: user_five_km_record_path(user_id: current_user.id), method: :put, local: true do |f| %>
    <div>
      <p>
        5kmの自己ベストを編集
      </p>
      <br>
      <p>
        <%= f.collection_select(:hour_id, Hour.all, :id, :name, {}) %>時間
      </p>
      <p>
        <%= f.collection_select(:minute_id, Minute.all, :id, :name, {}) %>分
      </p>  
      <p>
        <%= f.collection_select(:second_id, Second.all, :id, :name, {}) %>秒
      </p>  
      <%= f.submit "編集" %>
    </div>
  <% end %>
<% end %>
  
